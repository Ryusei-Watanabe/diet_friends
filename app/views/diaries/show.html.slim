.diary_show_wrapper
  h1.diary_title
    = @diary.title
  - if @diary.user == current_user
    .diary_edit_delete_btn
      = link_to '編集', edit_diary_path(@diary), class: 'btn btn-default'
      = link_to '削除', @diary, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default'
  - if current_user == @diary.user.followeds & @diary.user.followers
    .diary_body_weight
      = @diary.body_weight
  = simple_format(@diary.study, class: "diary_content")
  .diary_create_date
    = @diary.create_date.strftime("%Y年%m月%d日")


