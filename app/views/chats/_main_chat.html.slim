.chats_wrapper
  = render @chats
.chat_form
  = form_for [@group, @chat] do |f|
    = f.text_area :content,rows: 1, class: 'content_form', placeholder: 'type a message'
    .image_clip
      = f.label :image, class: 'glyphicon glyphicon-paperclip image_form' do
        = f.file_field :image, class: 'hidden'
    = f.submit '送信', class: 'chat_submit'